<% content_for :body_content_title do %>
  <%= @job.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @job.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @job.description %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @job.location %>
    </p>
  </section>
  <section>
    <h1>Salary</h1>
    <p>
      <%=humanized_money_with_symbol @job.salary %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @job.category_id %>
    </p>
  </section>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @job.user_id %>
    </p>
  </section>
  <section>
    <h1>Job Link</h1>
    <p>
      <%=raw @job.job_link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="jobs">
      <% @jobs.each do |job| %>
        <li>
          <%= link_to job.title, refinery.jobs_job_path(job) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
